<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/movie_background_bottom" >

    <LinearLayout
        android:id="@+id/movie_seek_time"
        android:layout_width="660dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/movie_time_current"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="18sp" />

        <com.wmt.frameworkbridge.video.VideoSeekTimeBar
            android:id="@+id/movie_seekbar"
            android:layout_width="490dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="1dip"
            android:layout_gravity="center_vertical"
            android:focusable="true"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/movie_time_total"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="660dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_seek_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/movie_play"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="130dip"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:src="@drawable/movie_play" />

        <ImageView
            android:id="@+id/movie_previous"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="40dip"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:src="@drawable/previous_btn_selector" />

        <ImageView
            android:id="@+id/movie_next"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="40dip"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:src="@drawable/next_btn_selector" />
        
         <ImageView
            android:id="@+id/play_mode" 
		   	android:layout_width="50dip"
			android:layout_height="50dip" 
			android:layout_marginLeft="40dp"
			android:paddingLeft="5dip"
            android:paddingRight="5dip"
			android:focusable="true"/>	 
		
         <ImageView
            android:id="@+id/channel"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="40dip"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
			/>
         
    </LinearLayout>

</RelativeLayout>