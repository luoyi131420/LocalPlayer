<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dip"
    android:orientation="vertical"
    android:background="@android:color/transparent">
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:text="@string/mv_subtitle_delay_adjust"
        android:padding="10dip"
        android:textSize="16sp"
        android:textStyle="bold" />
    
    <View
       android:layout_width="match_parent"
       android:layout_height="2dip"
       android:background="@drawable/setting_divider" />
    
    <LinearLayout 
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginLeft="5dip">
			<com.wmt.util.HolographicImageView 
				android:id="@+id/mv_subtitle_delay_reduce"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:padding="10dip"
				android:clickable="true"
				android:focusable="true"
				android:layout_gravity="center"
				android:src="@drawable/reduce">
			</com.wmt.util.HolographicImageView>
			<TextView 
				android:id="@+id/mv_subtitle_delay_time"
				android:layout_width="60dp"
				android:layout_height="wrap_content"
				android:text="@string/mv_subtitle_delay_default"
				android:textColor="@android:color/background_light"
				android:textSize="20sp"
				android:numeric="decimal"
				android:textStyle="bold"
				android:gravity="center"
				android:focusable="false"
				android:layout_gravity="center">
			</TextView>
			<com.wmt.util.HolographicImageView 
				android:id="@+id/mv_subtitle_delay_add"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:padding="10dip"
				android:layout_gravity="center"
			    android:src="@drawable/add"
			    android:clickable="true"
				android:focusable="true">
			</com.wmt.util.HolographicImageView>
				
	</LinearLayout>		
   
</LinearLayout>