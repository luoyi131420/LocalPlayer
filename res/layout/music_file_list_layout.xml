<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/media_bg">
	>
	<ImageView
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:background="@drawable/yinyue_icon" 
        android:layout_marginLeft="30dip"
        android:layout_marginTop="10dip"
        />
    <TextView 
 		android:id="@+id/music_num_id" 
 		android:layout_width="wrap_content"
  		android:layout_height="wrap_content" 
  		android:layout_marginLeft="100dp"
  		android:layout_marginTop="20dip"
        android:lines="1"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:textColor="@color/white" 
  		android:textSize="20sp">
  	</TextView>
  	
    <TextView 
 		android:id="@+id/file_path_title_id" 
 		android:layout_width="wrap_content"
  		android:layout_height="wrap_content" 
  		android:layout_toRightOf="@id/music_num_id"
  		android:layout_marginLeft="30dp"
  		android:layout_marginTop="20dip"
        android:lines="1"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:textColor="@color/white" 
  		android:textSize="20sp">
  	</TextView>
  	
    <ListView android:id="@+id/files"
        android:layout_width="1212dip"
        android:layout_height="600dip"   
 		android:layout_marginLeft="34dip"  
 		android:layout_marginTop="93dip"  
 		android:divider="#00000000"
    >     
    </ListView>
</RelativeLayout>