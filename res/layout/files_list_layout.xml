<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/media_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/media_icon"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="10dip"
        />
    
    <Spinner
		android:id="@+id/spinner"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="1130dip"
        android:layout_marginTop="20dip"
        android:spinnerMode="dropdown"
		/>
    
    <TextView
        android:id="@+id/no_file_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="48sp" 
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/path_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dip"
        android:layout_marginTop="30dip"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="24sp" 
        />
    <TextView
        android:id="@+id/file_path"
        android:layout_width="800dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dip"
        android:layout_marginTop="30dip"
        android:lines="1"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <GridView
        android:id="@+id/file_list_gridview"
        android:layout_width="1200dip"
        android:layout_height="500dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dip"
        android:columnWidth="152dip"
        android:numColumns="8"
        android:visibility="gone"
        android:verticalSpacing="35dip" 
        />
    
	<ListView android:id="@+id/file_list_listview"
        android:layout_width="1212dip"
        android:layout_height="600dip"   
 		android:layout_marginLeft="34dip"  
 		android:layout_marginTop="93dip" 
 		android:visibility="gone" 
 		android:divider="#00000000"/>     
</RelativeLayout>