<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@drawable/dialog2"
    android:gravity="center_vertical" >

    <LinearLayout
        android:layout_width="600dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/play_pause_button"
            android:layout_width="55dip"
            android:layout_height="55dip" />

        <Spinner
            android:id="@+id/time_spinner"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:layout_marginLeft="30dip"
            android:background="@drawable/time_jiange_selector" 
            android:prompt="@string/time_space" 
            />

 <!--    <Button
            android:id="@+id/bg_music_button"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:layout_marginLeft="30dip"
            android:background="@drawable/music_bg_selector" />
-->
        <Button
            android:id="@+id/play_mode"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:layout_marginLeft="30dip" />
        
        <Button 
            android:id="@+id/pic_scalBtn_add"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:layout_marginLeft="30dip"
            android:background="@drawable/poster_add_selector"
            />
         <Button 
            android:id="@+id/pic_scalBtn_jian"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:layout_marginLeft="30dip"
            android:background="@drawable/reduce_selector"
            />
    </LinearLayout>

</RelativeLayout>